= simple_form_for @product, url: url, html: { class: 'form-horizontal' } do |f|
  .form-inputs
    .form-group
      = f.label :name
      = f.text_field :name, :autofocus => true, class: 'form-control'
    .form-group
      = f.label :description
      = f.text_field :description, class: 'form-control'
    .form-group
      = f.label :manufacturer
      = f.text_field :manufacturer, class: 'form-control'
    .form-group
      = f.label :price
      = f.text_field :price, class: 'form-control'
    .form-group
      = f.label :quantity
      = f.text_field :quantity, class: 'form-control'
    .form-group
      = f.label :image
      = f.input :image, as: :file, label: false
  %br
  .form-actions
    = f.button :submit, "Submit", class: "btn-primary"
