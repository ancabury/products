%tr
  %td
    = product.name
  %td
    = product.description
  %td
    = product.manufacturer
  %td
    = product.price
  %td
    = product.quantity
  %td
    = link_to '<i class="icon-edit icon-white"></i>Edit'.html_safe, edit_product_path(product), class: "btn btn-info" rescue nil
    = link_to '<i class="icon-trash icon-white"></i>Delete'.html_safe,  product_path(product), method: :delete, class: "btn btn-danger", rel: :nofollow, data: { confirm: "Are you sure?", method: "delete" } rescue nil
